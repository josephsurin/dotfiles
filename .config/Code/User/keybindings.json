[
    {
        "key": "alt+h",
        "command": "cursorLeft"
    },
    {
        "key": "alt+j",
        "command": "cursorDown"
    },
    {
        "key": "alt+k",
        "command": "cursorUp"
    },
    {
        "key": "alt+l",
        "command": "cursorRight"
    },
    {
        "key": "alt+shift+h",
        "command": "cursorLeftSelect"
    },
    {
        "key": "alt+shift+j",
        "command": "cursorDownSelect"
    },
    {
        "key": "alt+shift+k",
        "command": "cursorUpSelect"
    },
    {
        "key": "alt+shift+l",
        "command": "cursorRightSelect"
    },
    {
        "key": "alt+u",
        "command": "undo"
    },
    {
        "key": "alt+shift+u",
        "command": "redo"
